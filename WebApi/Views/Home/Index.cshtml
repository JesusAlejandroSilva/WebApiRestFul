@model List<Aspirante>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido</h1>

</div>
<div class="card">
    <div class="card-header">
        Lista de Aspirantes
    </div>
    <div class="card-body">
        <a asp-action="Aspirante" asp-controller="Home" asp-route-idAspirante="0" class="btn btn-success btn-sm">Nuevo Aspirante</a>
        <a asp-action="ImprimirReporte" asp-controller="Home" class="btn btn-success btn-sm">Descargar Reporte</a>
        @*<a asp-action="test" asp-controller="Home" class="btn btn-success">test</a>*@
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>FechaNacimiento</th>
                    <th>Email</th>
                    <th>Telefono</th>
                    <th>EstadoPrueba</th>
                    <th>Calificacion</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdAspirante</td>
                        <td>@item.Nombre</td>
                        <td>@item.Apellido</td>
                        <td>@item.Fecha_Nacimiento</td>
                        <td>@item.Email</td>
                        <td>@item.Telefono</td>
                        <td>@item.Estado_Prueba</td>
                        <td>@item.Calificacion</td>
                        <td>
                            <a asp-action="Aspirante" asp-controller="Home" asp-route-IdAspirante="@item.IdAspirante" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Home" asp-route-IdAspirante="@item.IdAspirante" class="btn btn-danger btn-sm">Eliminar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>